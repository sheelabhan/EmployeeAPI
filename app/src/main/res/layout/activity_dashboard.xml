<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DashboardActivity">

    <Button
        android:id="@+id/btnSEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:text="SHOW ALL EMPLOYEE"/>
    <Button
        android:id="@+id/btnREmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:text="REGISTER EMPLOYEE"/>
    <Button
        android:id="@+id/btnSSEmployee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        android:text="SEARCH EMPLOYEE"/>

    <Button
        android:id="@+id/btnUDEmployee"
        android:layout_width="423dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="UPDATE/DELETE EMPLOYEE"
        android:textSize="30dp" />



</LinearLayout>